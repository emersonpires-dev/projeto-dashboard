-- Tabela para Usuários
CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    email VARCHAR(255) NOT NULL UNIQUE,
    password_hash VARCHAR(255) NOT NULL, -- Para armazenar a senha criptografada
    user_type ENUM('admin', 'manager', 'viewer') NOT NULL DEFAULT 'viewer', -- Tipos de permissão
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- Tabela para Categorias de Gastos (opcional, mas bom para padronizar)
CREATE TABLE categories (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100) NOT NULL UNIQUE,
    description TEXT
);

-- Inserir categorias padrão (você pode ajustar ou adicionar mais)
